		{% if app.user %}
			<ul class='nav navbar-nav navbar-right'>
				{% if is_granted('ROLE_ADMIN') %}
					<li>
						<a href='{{ path('sdf_billetterie_administration') }}'>Administration</a>
					</li>
				{% endif %}
				<li>
					<a href='{{ path('sdf_billetterie_logout') }}'>Déconnexion</a>
				</li>
			</ul>
