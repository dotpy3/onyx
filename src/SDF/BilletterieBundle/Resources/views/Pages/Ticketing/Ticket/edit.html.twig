{% extends 'SDFBilletterieBundle:Pages/Ticketing:layout.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block app_hero_content %}
	<h1>Options du billet</h1>
	<p>Tarif: {{ ticket.tarif.nomTarif }}.</p>
	<p><a class='btn btn-primary btn-lg' href="{{ path('sdf_billetterie_ticket_print', {'id' : ticket.id }) }}" role="button">Imprimer le billet &raquo;</a></p>
{% endblock %}

{% block app_content %}
	<form action='{{ path('sdf_billetterie_ticket_update', { id: ticket.id }) }}' method='{{ form.vars.method }}'>
		<div class='row'>
			<div class='col-sm-6'>{{ form_row(form.prenom) }}</div>
			<div class='col-sm-6'>{{ form_row(form.nom) }}</div>
		</div>
		<div class='row'>
			<div class='col-sm-6'>{{ form_row(form.accepteDroitImage) }}</div>
			<div class='col-sm-6'>{{ form_row(form.navette) }}</div>
		</div>
		{{ form_rest(form) }}
		<div class='form-group'>
			<input class='btn btn-success' type='submit' value='Editer' />
		</div>
	</form>
{% endblock %}